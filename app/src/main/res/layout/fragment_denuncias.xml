<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DenunciasFragment">


    <TextView
        android:id="@+id/titleDenuncia"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:text="@string/denuncia_subtitle"
        android:justificationMode="inter_word"
        android:textAlignment="inherit"
        android:textSize="15sp"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/denunciaText"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="250dp"
        android:maxLines ="4"
        android:maxLength ="2000"
        android:inputType="textCapSentences|textMultiLine" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enviarDenuncia"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        app:backgroundTint="@color/red"
        android:text="@string/enviar_denuncia_title"/>


    <ListView
        android:id="@+id/denuncias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>